		"@commitlint/config-conventional": "^19.5.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22.7.5",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"eslint": "^9.12.0",
		"eslint-plugin-promise": "^7.1.0",
		"husky": "^9.1.6",
		"standard-version": "^9.5.0",
		"typescript": "^5.6.3",
		"vitest": "^2.1.2"
