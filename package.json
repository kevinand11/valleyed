{
	"name": "@stranerd/validate",
	"version": "3.5.0",
	"description": "A lightweight package with definitions for various validation rules, and helper services to consume said rules.",
	"main": "lib/index.js",
	"scripts": {
		"build": "tsc --build",
		"lint": "eslint src/ --ext .ts --fix",
		"test": "jest",
		"release": "standard-version",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "Kevin Izuchukwu",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^17.4.0",
		"@commitlint/config-conventional": "^17.4.0",
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"eslint": "^8.31.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.0.3",
		"typescript": "^4.9.4"
	},
	"files": [
		"LICENSE",
		"CHANGELOG.md",
		"README.md",
		"bin",
		"lib"
	],
	"repository": {
		"url": "git://github.com/stranerd/validate.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"jest": {
		"roots": [
			"./"
		],
		"testMatch": [
			"**/tests/**/*.[jt]s?(x)",
			"**/tests/**/?(*.)+(spec|test).[jt]s?(x)"
		],
		"transform": {
			"^.+\\.ts(x)?$": "ts-jest"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"url-regex-safe": "^3.0.0"
	},
	"standard-version": {}
}
